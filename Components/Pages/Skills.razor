@page "/skills"

<PageTitle>Skills</PageTitle>

<div class="home">
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
        <MudCard Class="">
           
            <MudCardContent Class="content">
                <MudGrid >
                    @foreach (var skill in SkillsList)
                    {
                        <MudItem>
                            <MudPaper Class="paper">
                                <MudText Class="headerOne">@skill.Name</MudText>

                                <MudProgressCircular Class="" Value="@skill.Proficiency" Min="0.0" Max="100.0" Color="Color.Default" Indeterminate="false" Size="Size.Small" />

                                <MudText Class="headerTwo centered-text">@skill.Proficiency%</MudText>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>
            </MudCardContent>

            @* <MudCardActions Class="justify-center"> *@
            @*     <MudChipSet T="string" Color="Color.Info"> *@
